<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.carlos.bienvenidos.MainActivity"
    android:focusable="false"
    android:clickable="false"
    android:background="@android:color/holo_blue_dark"
    style="@style/Base.Animation.AppCompat.DropDownUp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"

        android:src="@drawable/marciano"
        android:laayout_alignParentStart="false"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/entrar"
        android:id="@+id/button"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@color/BLANCO"

        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:id="@+id/textView2"

        android:textStyle="bold"
        android:textColor="@color/BLANCO"
        
        android:textSize="@dimen/abc_action_bar_stacked_max_height"


        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
